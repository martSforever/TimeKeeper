<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59b4ca"
    android:orientation="vertical"
    tools:context="com.martsforever.owa.timekeeper.main.message.FriendsInviteMessageDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/message_system_detail_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="System Message"
            android:textColor="#b9e8f3"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_system_verify_message_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#66ffffff"
            android:gravity="left|top"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#aaffffff"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/message_system_close_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.25dp"
                android:layout_weight="1"
                android:background="#59b4ca"
                android:text="CLOSE"
                android:textColor="#b9e8f3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_tomato_bg_mid"
    android:orientation="vertical">

    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tomato_ripple_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:rb_color="#66ffffff"
        app:rb_duration="3000"
        app:rb_radius="64dp"
        app:rb_rippleAmount="3"
        app:rb_scale="6">

        <TextView
            android:id="@+id/tomato_time_text"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_tomato_time_text"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="25:00"
            android:textColor="#fff"
            android:textSize="32sp" />
    </com.skyfishjy.library.RippleBackground>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/tomato_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tomato_btn"
            android:text="start"
            android:textColor="#3891E1" />
        <Button
            android:id="@+id/tomato_continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tomato_btn"
            android:text="continue"
            android:textColor="#3891E1" />
        <Button
            android:id="@+id/tomato_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tomato_btn"
            android:text="stop"
            android:textColor="#3891E1" />
        <Button
            android:id="@+id/tomato_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tomato_btn"
            android:text="pause"
            android:textColor="#3891E1" />
        <Button
            android:id="@+id/tomato_giveup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tomato_btn"
            android:text="give up"
            android:textColor="#3891E1" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59b4ca"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/security_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Security"
            android:textColor="#b9e8f3"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/icon_reset_password" />

            <TextView
                android:id="@+id/security_reset_password_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="Reset Password"
                android:textColor="#666"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/icon_friend_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff">

            <ImageView
                android:id="@+id/me_message_badge"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/self_email" />

            <TextView
                android:id="@+id/security_bind_email_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="Binding Email"
                android:textColor="#666"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/icon_friend_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/self_mobile" />

            <TextView
                android:id="@+id/security_bind_mobile_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="Binding Mobile"
                android:textColor="#666"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/icon_friend_arrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#aaffffff"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_message_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="moganna"
            android:textColor="#666"
            android:textSize="18sp" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/item_jurisdiction_friend_schedule_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:si_animation_duration="500"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#9daeb2"
            app:si_tint_color="#9daeb2"
            app:srcCompat="@drawable/switch_schedule" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/item_jurisdiction_friend_invitation_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:si_animation_duration="500"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#9daeb2"
            app:si_tint_color="#9daeb2"
            app:srcCompat="@drawable/switch_invitation" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/item_jurisdiction_self_schedule_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:si_animation_duration="500"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#48036f"
            app:si_tint_color="#1d8c00"
            app:srcCompat="@drawable/switch_schedule" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/item_jurisdiction_self_invitation_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:si_animation_duration="500"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#48036f"
            app:si_tint_color="#1d8c00"
            app:srcCompat="@drawable/switch_invitation" />
    </LinearLayout>
</LinearLayout>
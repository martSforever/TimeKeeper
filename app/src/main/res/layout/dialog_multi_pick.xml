<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_multi_pick_title_text"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#346d7b"
        android:gravity="center"
        android:text="TUESDAY"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/dialog_multi_pick_list_view"
        android:layout_width="match_parent"
        android:dividerHeight="0.5dp"
        android:layout_height="256dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialog_multi_pick_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="CANCEL"
            android:textColor="#346d7b" />

        <Button
            android:id="@+id/dialog_multi_pick_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="OK"
            android:textColor="#346d7b" />
    </LinearLayout>

</LinearLayout>
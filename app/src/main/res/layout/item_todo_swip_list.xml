<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#33ffffff"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_todo_level_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="15dp"
        android:src="@drawable/important_height" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_todo_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园兼职"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/item_todo_status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/status_doing" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_todo_description_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="后天校园广场集合"
            android:textColor="#c3bed4" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_todo_end_time_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="2017/03/14\n17:38"
        android:textColor="#c3bed4"
        android:textSize="12sp" />


</LinearLayout>
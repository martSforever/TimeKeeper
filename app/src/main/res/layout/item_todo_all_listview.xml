<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#aaffffff"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_todo_level_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/important_middle" />

            <ImageView
                android:id="@+id/item_todo_status_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/status_doing" />

            <TextView
                android:id="@+id/item_todo_title_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="校园兼职"
                android:textColor="#333" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_todo_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:text="2017-12-6 12:11:11 - 2017-12-6 12:11:11"
            android:textColor="#999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_todo_description_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:text="后天校园广场集合"
            android:textColor="#999" />
    </LinearLayout>

    <com.github.zagum.switchicon.SwitchIconView
        android:id="@+id/item_todo_switch"
        android:layout_width="68dp"
        android:padding="13dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        app:si_disabled_color="#bbA1436F"
        app:si_tint_color="#bb429E5A"
        app:srcCompat="@drawable/icon_clock" />


</LinearLayout>
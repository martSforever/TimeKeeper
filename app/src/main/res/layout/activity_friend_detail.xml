<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59b4ca"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/friend_detail_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Friends Detail"
            android:textColor="#b9e8f3"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="Username"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_username_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="Nickname"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_nickname_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_email_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="Mobile"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_mobile_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="Schedule Available"
                android:textColor="#666"
                android:textSize="18sp" />

            <com.github.zagum.switchicon.SwitchIconView
                android:id="@+id/friend_detail_switch_schedule_btn"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="2"
                android:padding="15dp"
                app:si_animation_duration="500"
                app:si_disabled_alpha=".3"
                app:si_disabled_color="#48036f"
                app:si_tint_color="#1d8c00"
                app:srcCompat="@drawable/switch_schedule" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="Invitation Available"
                android:textColor="#666"
                android:textSize="18sp" />

            <com.github.zagum.switchicon.SwitchIconView
                android:id="@+id/friend_detail_switch_invitation_btn"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="2"
                android:padding="15dp"
                app:si_animation_duration="500"
                app:si_disabled_alpha=".3"
                app:si_disabled_color="#48036f"
                app:si_tint_color="#1d8c00"
                app:srcCompat="@drawable/switch_invitation" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
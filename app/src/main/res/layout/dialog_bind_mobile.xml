<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66ffffff"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Enter the mobile to be binded"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/bind_mobile_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="#44ffffff"
        android:hint="mobile phone number"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/bind_mobile_verify_code_edit"
            android:background="#44ffffff"
            android:hint="vertify code" />

        <Button
            android:id="@+id/bind_mobile_verify_code_get_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login_btn"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Get vertify code"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/bind_mobile_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_btn"
        android:text="submit"
        android:textAllCaps="false" />
</LinearLayout>
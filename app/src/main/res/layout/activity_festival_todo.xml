<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".main.todo.FestivalTodoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/festival_previous_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#59b4ca"
            android:padding="10dp"
            android:src="@drawable/icon_previous" />

        <TextView
            android:id="@+id/festival_date_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/month_select_btn_bg"
            android:gravity="center"
            android:text="2015-11-11"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/festival_next_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#59b4ca"
            android:padding="10dp"
            android:src="@drawable/icon_next" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Mon"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Tues"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Wed"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Thur"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Fri"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Sat"
                android:textColor="#ddffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/week_item_bg"
                android:gravity="center"
                android:text="Sun"
                android:textColor="#ddffffff" />
        </TableRow>
    </TableLayout>

    <GridView
        android:id="@+id/festival_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="0.5dp"
        android:gravity="center"
        android:numColumns="7" />

    <Button
        android:id="@+id/festival_back_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="#59b4ca"
        android:text="BACK"
        android:textColor="#fff" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_confirm_title_text"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#346d7b"
        android:gravity="center"
        android:text="Inform"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/dialog_confirm_message_text"
        android:text="Send Message successful!"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="128dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/dialog_confirm_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="CANCEL"
            android:textColor="#346d7b" />
        <Button
            android:id="@+id/dialog_confirm_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="OK"
            android:textColor="#346d7b" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59b4ca"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/friend_detail_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Friends Detail"
            android:textColor="#b9e8f3"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_username_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_nickname_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="邮箱地址"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_email_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="移动电话"
                android:textColor="#666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friend_detail_mobile_text"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="13"
                android:gravity="center_vertical|right"
                android:textColor="#666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:layout_weight="1"
            android:background="#aaffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center_vertical"
                android:text="请输入好友验证信息："
                android:textColor="#666"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/todo_detail_description_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#66ffffff"
                android:gravity="left|top"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/friend_detail_confirm_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.25dp"
                    android:layout_weight="1"
                    android:background="#59b4ca"
                    android:text="添加"
                    android:textColor="#b9e8f3" />

                <Button
                    android:id="@+id/friend_detail_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.25dp"
                    android:layout_weight="1"
                    android:background="#59b4ca"
                    android:text="取消"
                    android:textColor="#b9e8f3" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_pick_title_text"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#346d7b"
        android:gravity="center"
        android:text="TUESDAY"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/dialog_pick_value_text"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#41899a"
        android:gravity="center"
        android:text="22"
        android:textColor="#fff"
        android:textSize="32sp" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/dialog_pick_select_list"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:wheel_atmospheric="true"
        app:wheel_curtain="true"
        app:wheel_curtain_color="#6641899a"
        app:wheel_curved="true"
        app:wheel_item_text_color="#000"
        app:wheel_selected_item_text_color="#346d7b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialog_pick_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="CANCEL"
            android:textColor="#346d7b" />

        <Button
            android:id="@+id/dialog_pick_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="OK"
            android:textColor="#346d7b" />
    </LinearLayout>

</LinearLayout>
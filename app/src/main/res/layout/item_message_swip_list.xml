<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#aaffffff"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_message_title_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="friend's invitation" />

        <TextView
            android:id="@+id/item_message_verify_message_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="vertify message: I'm marts"
            android:textColor="#999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_message_isread_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="unread" />

        <TextView
            android:id="@+id/item_message_time_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="2017-4-10 22:30"
            android:textColor="#999"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
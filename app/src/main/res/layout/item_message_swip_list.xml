<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#aaffffff"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_message_icon_img"
            android:src="@drawable/icon_message_invitation"
            android:layout_width="34dp"
            android:layout_marginRight="5dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/item_message_title_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="friend's invitation" />

        <TextView
            android:id="@+id/item_message_isread_txt"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="unread" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_message_verify_message_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="vertify message: I'm marts"
            android:textColor="#9daeb2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_message_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="2017-4-10 22:30"
            android:textColor="#A67546"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>